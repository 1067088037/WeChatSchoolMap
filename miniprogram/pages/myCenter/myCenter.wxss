/* pages/myCenter/myCenter.wxss */
.getUserInfo {
  text-align: center;
}

.myCenter-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

._hover_list {
  opacity: 0.9;
  background: rgb(114, 113, 113);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  position: relative;
  right: 22rpx;
  bottom: 22rpx;
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border: 3px solid rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 7px 3px rgba(61, 55, 55, 0.2);
  border-radius: 50%;
}

.nameuse {
  position: relative;
  left: 150rpx;
}

.usermotto {
  margin-top: 200px;
}

.UserFunction button {
  color: rgb(78, 78, 78);
  background-color: rgb(226, 225, 225);
  margin-top: 20rpx;
}

.head {
  height: 300rpx;
  background: rgb(156, 192, 221);
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  border: 3px solid rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 7px 3px rgba(61, 55, 55, 0.2);
}

.word1 {
  position: relative;
  left: 200rpx;
  bottom: 220rpx;
  color: rgb(219, 211, 211);

}

.word2 {
  position: relative;
  left: 200rpx;
  bottom: 180rpx;
}

.word3 {
  position: relative;
  bottom: 60rpx;
}

.srcOut {
  position: relative;
  left: 200rpx;
  display: flex;
  flex-wrap: nowrap;
  height: 200rpx;
}

.sonhead {
  display: flex;
  margin: 20rpx;
  /* background: white; */
  border-radius: 30rpx;
  height: 150rpx;
  border: 3px solid rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 7px 3px rgba(61, 55, 55, 0.2);
}

.name {
  width: auto;
  position: relative;
  right: 220rpx;
}

.icon {
  width: 50rpx;
