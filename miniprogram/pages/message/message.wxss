/* 输入框的样式 */
input {
  border-radius: 10rpx;
  border: 1rpx black;
  box-shadow: darkgray 5rpx 5rpx 10rpx;
  width: 720rpx;
  text-align: center;
  margin-left: 15rpx;
  height: 60rpx;
}
.MessageBox{
  border-radius: 10rpx;
  border: 1rpx  black;
  background-color: lightgrey;
  /* box-shadow: darkgray 5rpx 5rpx 10rpx; */
  margin-top: 40rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  position: relative;
}
.MessageImage{
  
  width: 110rpx;
  height: 110rpx;

}
.ActivityMessage {
  border-radius: 10rpx;
  border: 1rpx black;
  box-shadow: darkgray 5rpx 5rpx 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  position: relative;
}
.ActivityMessage image {
  position: relative;
  widows: 110rpx;
  height: 110rpx;

}
.LifeStrategyPage image{
  position: relative;
  widows: 110rpx;
  height: 110rpx;
}
.LifeStrategyPage{
  border-radius: 10rpx;
  border: 1rpx black;
