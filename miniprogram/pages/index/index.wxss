/* 功能页面的样式 */
.funcMask {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, .5);
  z-index: 2;
  top: 0;
  left: 0;
  align-items: center;
}

.funcMaskContent {
  padding: 20rpx 0;
  width: 70%;
  background: #E6E6E6;
  margin: 40% auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
  align-items: center;
  position: relative;
}

